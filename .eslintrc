{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["html"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
    // "parser": "@babel/eslint-parser",
    // "requireConfigFile": false,
    // "ecmaFeatures": {
    //   // 支持装饰器
    //   "legacyDecorators": true
    // }
  },
  "rules": {
    "camelcase": 2
    // "no-console": 1,
    // "no-debugger": 1
    // "complexity": ["warn", 25]
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.{j,t}s?(x)", "**/tests/unit/**/*.spec.{j,t}s?(x)"],
      "env": { "jest": true }
    }
  ]
}
